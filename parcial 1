        #Ordenar por nombre de manera ascendete 
        
        def ordenar_por_nombre(lista)
        
        for i in range(len(lista)):
            
            for j in range(i+1,len(lista)):
                if lista[i][0]>lista[j][0]:
                    temporal=lista[i]
                    lista[i]=lista[j]
                    lista[j]=temporal
    #llamamos a la funcion para ordenar la lista principal de (super_heroes_data)
    
    ordenar_por_nombre(super_heroes_data)
    #mostrar el listado ordenado 
    print("personajes ordenados por nombre:")
    for p in super_heroes_data:
        print(p[0])
        
        
