    #funcion recursiva para buscar "capitan America"
     def buscar_capitan_america (lista,super_heroes_data):
         if super_heroes_data>=len (lista):
             return false 
             if lista s[uper_heroes_data]== "capitan america":
                 return True
             return buscar_capitan_america(lista,super_heroes_data+)
         #funcion recursiva para listar todos los super heroes
         def listar_superheroes(lista,super_heroes_data):
             if super_heroes_data>=len(lista):
                 return
             print(lista[super_heroes_data])
             listar_superheroes(lista,super_heroes_data+)
             
             #prueba de las funciones
